            @Html.ValidationMessageFor(model => model.Student.DateOfBirth, "", new { @class = "text-danger" })
        </div>
    </div>
    @*Replace  courseId with Dropdown list*@

    <div class="form-group">
        @Html.LabelFor(model => model.Student.CourseId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Student.CourseId, new SelectList(Model.CourseList, "Id", "CourseName"), "Select Course", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Student.LastName, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Student.CourseEnrolleddate, htmlAttributes: new { @class = "control-label col-md-2" })
